//extends layout
//block layout-content

doctype html
head
  meta(charset='utf-8')
  link(rel='stylesheet' href='style.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
.topnav
  a.active(href='#home') Home
  a(href='#news') News
  a(href='#contact') Contact
  a(href='#about') About
input#click(type='checkbox')
label(for='click')
  i.fab.fa-facebook-messenger
  i.fas.fa-times
.wrapper
  .head-text
    | Let&apos;s chat? - Online
  .chat-box
    .desc-text
      | Please fill out the form below to start chatting with the next available agent.
    form(action='#')
      .field
        input(type='text' placeholder='Your Name' required='')
      .field
        input(type='email' placeholder='Email Address' required='')
      .field.textarea
        // Due to more textarea fields I got an error so I've changed the textarea name into changeit..Change the tag name to use it
        changeit(cols='30' rows='10' placeholder='Explain your queries..' required='')
      .field
        button(type='submit') Start Chat